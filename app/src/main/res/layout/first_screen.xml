<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:color/white" />

    <Button
        android:id="@+id/easylong"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="853dp"
        android:layout_height="430dp"
        android:background="#126416"
        android:text="Standard Führung"
        android:textColor="#e0e0e0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/easyshort"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="853dp"
        android:layout_height="430dp"
        android:background="#232323"
        android:text="Kurze Führung"
        android:textColor="#e0e0e0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#444444"
        android:text="#444444" />

    <Button
        android:id="@+id/advancedlong"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="853dp"
        android:layout_height="430dp"
        android:background="#232323"
        android:text="Sehr ausführliche Führung"
        android:textColor="#e0e0e0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/advancedshort"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="853dp"
        android:layout_height="430dp"
        android:background="#126416"
        android:text="Ausführliche Führung"
        android:textColor="#e0e0e0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.801" />

    <Button
        android:id="@+id/individual"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="1710dp"
        android:layout_height="120dp"
        android:background="#121212"
        android:text="Individuelle führung"
        android:textColor="#e0e0e0"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>