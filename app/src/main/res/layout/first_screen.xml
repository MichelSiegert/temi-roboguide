<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:color/white" />

    <Button
        android:id="@+id/easylong"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="852dp"
        android:layout_height="430dp"
        android:background="@android:color/holo_blue_light"
        android:text="Einfache Führung"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/easyshort"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="852dp"
        android:layout_height="430dp"
        android:background="@android:color/holo_orange_dark"
        android:text="kurze führung"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/advancedlong"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="852dp"
        android:layout_height="430dp"
        android:background="@android:color/holo_purple"
        android:text="Ausführliche Führung"
        android:textColorLink="#ff000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/advancedshort"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="852dp"
        android:layout_height="430dp"
        android:background="@android:color/holo_green_light"
        android:text="Kurze aber ausführlich"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.801" />

    <Button
        android:id="@+id/individual"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="1710dp"
        android:layout_height="120dp"
        android:text="Individuelle führung"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>