<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnExitApp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        android:drawableEnd="@drawable/baseline_exit_to_app_24"
        android:drawablePadding="@dimen/btnIconPadding"
        android:text="@string/btnExit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/easylong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Einfache Führung"
        app:layout_constraintBottom_toTopOf="@+id/easyshort"
        app:layout_constraintEnd_toEndOf="@+id/btnExitApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535" />

    <Button
        android:id="@+id/easyshort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:text="kurze führung"
        app:layout_constraintBottom_toTopOf="@+id/advancedlong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/advancedlong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ausführliche Führung"
        app:layout_constraintBottom_toBottomOf="@+id/individual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/advancedshort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kurze aber ausführlich"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advancedlong"
        app:layout_constraintVertical_bias="0.218" />

    <Button
        android:id="@+id/individual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Individuelle führung"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.772" />

</androidx.constraintlayout.widget.ConstraintLayout>